<div id="sign_up" class="content_pane">
  <h3>Add a new user</h3>
  <div class="form">
  <% form_for @user do |f| %>
    <%= f.error_messages %>
    <table>
      <tr><td>email:</td><td><%= f.text_field :email %></td></tr>
      <tr><td>password:</td><td><%= f.password_field :password %></td></tr>
      <tr><td>confirm password:</td><td><%= f.password_field :password_confirmation %></td></tr>
      <tr><td>admin?:</td><td><%= f.check_box(:admin) %></td></tr>
    </table>
    <%= f.submit 'Add' %>
  <% end %>
  </div>
</div>
